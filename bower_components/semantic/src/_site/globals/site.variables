/*******************************
     User Global Variables
*******************************/

/*-------------------
     Fonts
--------------------*/

@headerFont        : 'Helvetica Neue', Arial, Helvetica, sans-serif;
@pageFont          : 'Helvetica Neue', Arial, Helvetica, sans-serif;
@fontSmoothing     : antialiased;

@importGoogleFonts : false;
@googleFontName    : 'Lato';
@googleFontSizes   : '400,700,400italic,700italic';
@googleFontFamily  : '@{googleFontName}:@{googleFontSizes}';

/*-------------------
    Base Sizes
--------------------*/

@emSize      : 16px;
@fontSize    : 16px;

/*-------------------
      Sizes
--------------------*/

/* Exact pixel values @ 14px em */
@mini        : 0.7rem;
@tiny        : 0.8rem;
@small       : 0.9rem;
@medium      : 1rem;
@large       : 1.25rem;
@big         : 1.5rem;
@huge        : 1.75rem;
@massive     : 2rem;

/*-------------------
      Page
--------------------*/

@fontSize            : 16px;
@lineHeight          : 1.4;
@textColor           : rgba(0, 0, 0, 0.8);
